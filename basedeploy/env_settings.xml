<?xml version="1.0" encoding="UTF-8"?>
<EnvSettings>
	<Environments>
		<env id="global" abstract="abstract">
			<env id="local" abstract="abstract">
				<env id="makis" />
			</env>
			<env id="dev" />
			<env id="prod">
				<env id="preprod" />
			</env>
		</env>
	</Environments>
	<ConfigPHP>
	   <custom_code>
           <global><![CDATA[
           date_default_timezone_set( 'Europe/Paris' );
           ]]></global>
       </custom_code>
	</ConfigPHP>
	<INIFiles>
		<override>
			<file name="site.ini">
				<ExtensionSettings>
					<ActiveExtensions type="array">
						<global>
							<item>__projet__</item>
							<item>__base__</item>
							<item>xrowmetadata</item>
							<item>ezformtoken</item>
                            <item>ezxmlinstaller</item>
							<item>ezless</item>
							<item>ezjscore</item>
							<item>ezoe</item>
							<item>eztags</item>
							<item>ezfind</item>
						</global>
					</ActiveExtensions>
				</ExtensionSettings>
				<DatabaseSettings>
					<DatabaseImplementation>
						<global>ezmysqli</global>
					</DatabaseImplementation>
					<Server>
						<global>localhost</global>
					</Server>
					<Port>
						<global></global>
					</Port>
					<User>
					    <global>root</global>
					</User>
					<Password>
						<makis></makis>
					</Password>
					<Database>
                        <global>ezp5_instance</global>
					</Database>
					<Charset>
						<global></global>
					</Charset>
					<Socket>
						<global>disabled</global>
					</Socket>
				</DatabaseSettings>
				<MailSettings>
					<AdminEmail>
						<makis>alainmakis@gmail.com</makis>
					</AdminEmail>
					<EmailSender>
						<makis>alainmakis@gmail.com</makis>
					</EmailSender>
				</MailSettings>
				<SiteSettings>
					<DefaultAccess>
						<global>fr</global>
					</DefaultAccess>
				</SiteSettings>
				<SiteAccessSettings>
					<CheckValidity>
						<global>false</global>
					</CheckValidity>
					<ForceVirtualHost>
						<global>true</global>
					</ForceVirtualHost>
					<AvailableSiteAccessList type="array">
						<global>
							<item>fr</item>
							<item>en</item>
							<item>fr_admin</item>
						</global>
					</AvailableSiteAccessList>
					<RelatedSiteAccessList type="array">
						<global>
							<item>fr</item>
							<item>en</item>
							<item>fr_admin</item>
						</global>
					</RelatedSiteAccessList>
                    <MatchOrder>
                        <global>host</global>
                    </MatchOrder>
                    <HostMatchType>
                        <global>map</global>
                    </HostMatchType>
                    <HostMatchMapItems type="array" reset="true">
                        <makis>
                            <item>ezp5_instance.legacy.makis;fr</item>
                            <item>ezp5_instance.legacy.makis;en</item>
                            <item>admin.ezp5_instance.legacy.makis;fr_admin</item>
                        </makis>
                    </HostMatchMapItems>
				</SiteAccessSettings>
				<FileSettings>
					<VarDir>
						<global>var/ez_site</global>
					</VarDir>
				</FileSettings>
				<TemplateSettings>

				</TemplateSettings>
			</file>
			<file name="image.ini">
				<ImageMagick>
					<IsEnabled>
						<global>true</global>
					</IsEnabled>
					<ExecutablePath>
						<global>/usr/bin</global>
						<makis>C:\Program Files (x86)\ImageMagick-6.7.1-Q16</makis>
					</ExecutablePath>
					<Executable>
						<global>convert</global>
						<makis>convert.exe</makis>
					</Executable>
					<ExecutableWin32>
						<makis>convert.exe</makis>
					</ExecutableWin32>
				</ImageMagick>
			</file>
			<file name="heliodeploy.ini">
				<ServerSettings>
					<PHPExecPath>
						<global>php</global>
					</PHPExecPath>
				</ServerSettings>
			</file>
            <file name="solr.ini">
                <SolrBase>
                    <SearchServerURI>
                        <makis>http://127.0.0.1:8983/solr</makis>
                    </SearchServerURI>
                </SolrBase>
            </file>
		</override>
		<siteaccess name="fr">
			<file name="site.ini">
				<SiteSettings>
					<SiteURL>
						<makis>ezp5_instance.legacy.makis</makis>
					</SiteURL>
					<AdditionalLoginFormActionURL>
						<makis>http://admin.ezp5_instance.legacy.makis/user/login</makis>
					</AdditionalLoginFormActionURL>
				</SiteSettings>
				<DebugSettings>
					<DebugOutput>
						<global>disabled</global>
						<local>enabled</local>
					</DebugOutput>
					<DebugRedirection>
						<global>disabled</global>
					</DebugRedirection>
				</DebugSettings>
				<TemplateSettings>
					<ShowUsedTemplates>
						<global>disabled</global>
						<local>enabled</local>
					</ShowUsedTemplates>
					<TemplateCompile>
						<global>enabled</global>
						<local>disabled</local>
					</TemplateCompile>
					<ViewCaching>
						<global>enabled</global>
						<local>disabled</local>
					</ViewCaching>
					<Cache>
						<global>enabled</global>
						<local>disabled</local>
					</Cache>
					<DevelopmentMode>
						<global>disabled</global>
						<local>enabled</local>
					</DevelopmentMode>
					<Debug>
						<global>disabled</global>
						<local>enabled</local>
					</Debug>
					<ShowXHTMLCode>
						<global>disabled</global>
					</ShowXHTMLCode>
					<TemplateCache>
						<global>enabled</global>
						<local>disabled</local>
					</TemplateCache>
				</TemplateSettings>
				<ContentSettings>
					<ViewCaching>
						<global>enabled</global>
						<local>disabled</local>
					</ViewCaching>
				</ContentSettings>
				<DatabaseSettings>
					<SQLOutput>
						<global>disabled</global>
					</SQLOutput>
				</DatabaseSettings>
			</file>
		</siteaccess>
		<siteaccess name="en">
			<file name="site.ini">
				<SiteSettings>
					<SiteURL>
						<makis>ezp5_instance.legacy.makis/en</makis>
					</SiteURL>
					<AdditionalLoginFormActionURL>
						<makis>http://admin.ezp5_instance.legacy.makis/en/user/login</makis>
					</AdditionalLoginFormActionURL>
				</SiteSettings>
				<DebugSettings>
					<DebugOutput>
						<global>disabled</global>
						<local>enabled</local>
					</DebugOutput>
					<DebugRedirection>
						<global>disabled</global>
					</DebugRedirection>
				</DebugSettings>
				<TemplateSettings>
					<ShowUsedTemplates>
						<global>disabled</global>
						<local>enabled</local>
					</ShowUsedTemplates>
					<TemplateCompile>
						<global>enabled</global>
						<local>disabled</local>
					</TemplateCompile>
					<ViewCaching>
						<global>enabled</global>
						<local>disabled</local>
					</ViewCaching>
					<Cache>
						<global>enabled</global>
						<local>disabled</local>
					</Cache>
					<DevelopmentMode>
						<global>disabled</global>
						<local>enabled</local>
					</DevelopmentMode>
					<Debug>
						<global>disabled</global>
						<local>enabled</local>
					</Debug>
					<ShowXHTMLCode>
						<global>disabled</global>
					</ShowXHTMLCode>
					<TemplateCache>
						<global>enabled</global>
						<local>disabled</local>
					</TemplateCache>
				</TemplateSettings>
				<ContentSettings>
					<ViewCaching>
						<global>enabled</global>
						<local>disabled</local>
					</ViewCaching>
				</ContentSettings>
				<DatabaseSettings>
					<SQLOutput>
						<global>disabled</global>
					</SQLOutput>
				</DatabaseSettings>
			</file>
		</siteaccess>
		<siteaccess name="fr_admin">
			<file name="site.ini">
				<SiteSettings>
					<SiteURL>
						<makis>admin.ezp5_instance.legacy.makis</makis>
					</SiteURL>
				</SiteSettings>
				<DebugSettings>
				    <DebugOutput>
                        <global>disabled</global>
                        <local>enabled</local>
                    </DebugOutput>
					<DebugRedirection>
						<global>disabled</global>
						<ben>disabled</ben>
					</DebugRedirection>
				</DebugSettings>
			</file>
		</siteaccess>
	</INIFiles>
</EnvSettings>